generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum razinaEnum {
  Pcelice
  Leptirici
  Ecolier
  Benjamin
}

model Pitanje {
  idPitanje   Int           @id @default(autoincrement())
  tezina      Int
  godina      Int
  photoURL    String?
  razina      razinaEnum
  odgovori    Odgovor[]
  objasnjenje Objasnjenje?
}

model Odgovor {
  idOdgovor Int      @id @default(autoincrement())
  idPitanje Int
  tocnost   Boolean
  tekst     String   @db.VarChar(30)
  pitanje   Pitanje  @relation(fields: [idPitanje], references: [idPitanje])
}

model Objasnjenje {
  idObjasnjenje Int      @id @default(autoincrement())
  idPitanje     Int      @unique
  photoURL      String?
  pitanje       Pitanje  @relation(fields: [idPitanje], references: [idPitanje])
}
