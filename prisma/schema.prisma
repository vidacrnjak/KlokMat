generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum razinaEnum {
  Pcelice
  Leptirici
  Ecolier
  Benjamin
}

model Pitanje {
  idPitanje      Int           @id @default(autoincrement())
  tezina         Int
  godina         Int
  photoURL       String?
  razina         razinaEnum
  answerA        String?
  answerB        String?
  answerC        String?
  answerD        String?
  answerE        String?
  correctAnswer  Int?          // 1=A, 2=B, 3=C, 4=D, 5=E
  objasnjenje    Objasnjenje?
}

model Objasnjenje {
  idObjasnjenje Int      @id @default(autoincrement())
  idPitanje     Int      @unique
  photoURL      String?
  pitanje       Pitanje  @relation(fields: [idPitanje], references: [idPitanje])
}
